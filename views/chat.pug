extends layout

block content
    script(src='//cdn.auth0.com/js/lock-9.2.min.js')
    script(src='/socket.io/socket.io.js')

    div.ui.container
        div#login
            button.ui.button.primary Login
        div.ui.segment
            div#chat
                ul#messages
        form.ui.form(action='')
            inline.field
                input(id='m' autocomplete='off' placeholder='Send a message')
                button.ui.button.primary Send

    script.
        var userProfile;
        var userToken;
        var lock = new Auth0Lock('#{env.AUTH0_CLIENT_ID}', '#{env.AUTH0_DOMAIN}');
        var hash = lock.parseHash();
        $('#chat').hide();
        $('#login button').click(function (e) {
            e.preventDefault();
            lock.show();
        });

        if (hash) {
            if (hash.error) {
                console.log('There was an error logging in', hash.error);
            }
            else {
                lock.getProfile(hash.id_token, function (err, profile) {
                    if (err) {
                        console.log('Cannot get user', err);
                        return;
                    }
                    console.log('connected and authenticated');
                    userProfile = profile;
                    localStorage.setItem('userToken', hash.id_token);
                    userToken = hash.id_token;
                    openChat();
                });
            }
        }

        function openChat() {
            var socket = io();
            socket
                .on('connect', function (msg) {
                    socket.emit('authenticate', {token: userToken}); // send the jwt
                })
                .on('authenticated', function () {
                    //Do
                    $('#login').hide();
                    $('#chat').show();
                    $('form').submit(function (event) {
                        if($('#m').val() == '') {
                            return false
                        }
                        socket.emit('chat message', {
                            user: userProfile.nickname,
                            text: $('#m').val(),
                            avatar: userProfile.picture
                        });
                        $('#m').val('');
                        return false;
                    });
                })
                .on('unauthorized', function(msg){
                    console.log('unauthorized: ' + JSON.stringify(msg.data));
                    throw new Error(msg.data.type);
                })
                .on('chat message', function (msg) {
                    $('#messages').append($('<li>').text(msg.user + ': ' + msg.text));
                });
        };
