extends layout

block content

    ul(id='messages')
    form(action='')
        input(id='m' autocomplete='off')
        button(type='submit') Send
    script.
        var socket = io();
        $('form').submit(function() {
            socket.emit('chat message', $('#m').val());
            $('#m').val('');
            return false;
        });
        socket.on('chat message', function(msg) {
            $('#messages').append($('<li>').text(msg));
        });
